<Window x:Class="Backlogger.CollectionWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Backlogger"
        mc:Ignorable="d"
        Title="CollectionWindow" Height="450" Width="800"
        Name="CollectionWin"
        Closing="CollectionWindow_Closing"
        Loaded="CollectionWindow_Loaded">
    <Window.Resources>
        <CollectionViewSource x:Key="materialsViewSource" d:DesignSource="{d:DesignInstance {x:Type local:Material}, CreateList=True}"/>
    </Window.Resources>
    <Grid>
        <DataGrid x:Name="dataGrid" ItemsSource="{Binding Source={StaticResource materialsViewSource}}" HorizontalAlignment="Left" Height="340" Margin="80,60,0,0" VerticalAlignment="Top" Width="702">

        </DataGrid>
        <Button x:Name="AddButton" Content="Add" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Width="75" Click="AddButton_Click"/>
        <Button x:Name="SubscriptionsButton" Content="Subscriptions" HorizontalAlignment="Left" Margin="105,10,0,0" VerticalAlignment="Top" Width="75" Click="SubscriptionsButton_Click"/>
    </Grid>
</Window>
