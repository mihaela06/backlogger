<Window x:Class="Backlogger.Windows.StatisticsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Backlogger.Windows"
        x:Name="statisticsWindow"
        mc:Ignorable="d"
        Closing="StatisticsWindow_Closing"
        Title="Statistics" Height="800" MinHeight="800" Width="1200" MinWidth="1000"
        xmlns:rep="clr-namespace:Microsoft.Reporting.WinForms;assembly=Microsoft.ReportViewer.WinForms"
        WindowStartupLocation="CenterScreen">
    <TabControl x:Name="tabControl">
        <TabItem Header="Time per hobby">
            <Grid x:Name="TimeHobbiesGrid">
                <WindowsFormsHost Name="WindowsFormsHost">
                    <rep:ReportViewer x:Name="RepViewer" Load="ReportViewer_Load" />
                </WindowsFormsHost>
            </Grid>
        </TabItem>
        <TabItem Header="Time per material">
            <Grid x:Name="TimeMaterialsGrid">
                <WindowsFormsHost Name="WindowsFormsHost2">
                    <rep:ReportViewer x:Name="RepViewer2" Load="ReportViewer2_Load"/>
                </WindowsFormsHost>
            </Grid>
        </TabItem>
        <TabItem Header="Complete report">
            <Grid x:Name="ReportGrid">
                <WindowsFormsHost Name="WindowsFormsHost3">
                    <rep:ReportViewer x:Name="RepViewer3" Load="ReportViewer3_Load"/>
                </WindowsFormsHost>
            </Grid>
        </TabItem>
        <TabItem Header="Spendings">
            <Grid x:Name="SpendingsGrid">
                <WindowsFormsHost Name="WindowsFormsHost4">
                    <rep:ReportViewer x:Name="RepViewer4" Load="ReportViewer4_Load"/>
                </WindowsFormsHost>
            </Grid>
        </TabItem>
    </TabControl>

</Window>
